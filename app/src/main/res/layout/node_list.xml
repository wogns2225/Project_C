<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_recycler_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_recycler_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Friend List]"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/id_recycler_main_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recycler_main_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:scrollbars="vertical"
        app:layout_constraintHeight_max="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_recycler_textview" />


</androidx.constraintlayout.widget.ConstraintLayout>




